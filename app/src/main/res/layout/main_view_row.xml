<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5sp"
        app:cardElevation="1sp"
        android:layout_gravity="center"
        app:cardUseCompatPadding="true"
        android:id="@+id/cv">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/postTitle"
            android:textAlignment="center"
            android:textStyle="bold"
            android:typeface="sans"
            android:gravity="center"
            android:textSize="18dp"
            android:paddingLeft="7dp"
            android:paddingTop="10dp"
            android:paddingRight="7dp"
            android:paddingBottom="2dp"
            android:lines="2"
            android:ellipsize="end"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal">
                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/postDate"
                android:textAlignment="center"
                android:textStyle="italic"
                android:gravity="center"
                android:textSize="14dp"
                android:paddingLeft="7dp"
                android:paddingTop="10dp"
                android:paddingRight="7dp"
                android:paddingBottom="5dp"
                />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/saveArticle"
                    android:src="@drawable/ic_action_favorite_grey"
                    android:layout_toEndOf="@id/postDate"
                    android:background="@null" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/shareArticle"
                    android:src="@drawable/ic_action_share_grey"
                    android:layout_gravity="right"
                    android:layout_toEndOf="@id/saveArticle"
                    android:background="@null" />

            </RelativeLayout>

            <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/postImage"
            android:paddingLeft="7dp"
            android:paddingTop="2dp"
            android:paddingRight="7dp"
            android:paddingBottom="10dp"
            android:layout_gravity="center_horizontal" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>